{% extends "@Contao/content_element/text.html.twig" %}

{% if data.text2 %}
    {% set attributes = attrs(attributes|default).addClass('second_text') %}
{% endif %}

{% block text %}

        {% if data.text2 %}
            {{ parent() }}
            <div class="rte2">
                {{ data.text2|raw }}
            </div>
        {% else %}
            {{ parent() }}
        {% endif %}
        
{% endblock %}  
